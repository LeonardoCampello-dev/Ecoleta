{% extends "layout.njk" %}

{% set pageId = "page-create-point" %}

{% block title %}
    <title>Criar um ponto de coleta</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/create-point.css">
    <link rel="stylesheet" href="/styles/modal.css">
{% endblock styles %}

{% block content %}
    {% include "partials/page-header.njk" %}

    <form action="/savepoint" method="POST">
    
        <h1>Cadastro do ponto de coleta</h1>
        
        <fieldset>
            <legend>
                <h2>Dados da entidade</h2>
            </legend>

            {% include 'partials/fields.njk' %}

        </fieldset>

        <fieldset>

            <legend>
                <h2>Itens de coleta</h2>

                <span>Selecione um ou mais itens de coleta abaixo</span>
            </legend>

            {% include 'partials/collection-items.njk' %}

        </fieldset>

        <button type="submit">Cadastrar ponto de coleta</button>
        
    </form>
{% endblock content %}

{% block modal %}

    {% if saved %}
        {% include "partials/point-created.njk" %}
    {% endif %}

{% endblock modal %}

{% block scripts %}
    <script src="/scripts/create-point.js"></script>
{% endblock scripts %}